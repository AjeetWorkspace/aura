<?xml version="1.0" encoding="UTF-8"?>
<configurations>
    <!-- gate all polyfills -->
    <gated>true</gated>
    <!-- send minified source -->
    <minify>true</minify>
    <!-- load polyfills when user agent is unknown -->
    <load-on-unknown-ua>true</load-on-unknown-ua>

    <polyfills>
        <!--
        Current Promise polyfill requires setImmediate which is too new to be used.
        Additionally, https://github.com/reiniergs/polyfill-service/issues/150
        <polyfill>Promise</polyfill>
        -->
        <polyfill>Array.prototype.find</polyfill>
        <polyfill>Array.prototype.findIndex</polyfill>
        <polyfill>Array.prototype.fill</polyfill>
        <polyfill>Array.prototype.keys</polyfill>
        <polyfill>Array.prototype.includes</polyfill>
        <polyfill>CustomEvent</polyfill>
        <polyfill>Date.now</polyfill>
        <polyfill>Event</polyfill>
        <polyfill>Function.name</polyfill>
        <polyfill>Function.prototype.bind</polyfill>
        <polyfill>Object.keys</polyfill>
        <polyfill>Object.assign</polyfill>
        <polyfill>requestAnimationFrame</polyfill>
        <polyfill>WeakMap</polyfill>
        <polyfill>WeakSet</polyfill>
        <polyfill>Symbol</polyfill>
        <polyfill>compat.classList</polyfill>
        <polyfill>compat.freeze</polyfill>
    </polyfills>

</configurations>